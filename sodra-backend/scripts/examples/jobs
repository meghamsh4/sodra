CREATE KEYSPACE IF NOT EXISTS sodra  
	WITH REPLICATION = { 'class' : 'SimpleStrategy', 'replication_factor' : 1 };
	
CREATE TABLE sodra.jobs ( 
	job_id int PRIMARY KEY, 
	agency text, 
	job_title text, 
	salary decimal,
	location text,
	job_description text,
	qualifications text,
	skills text,
	posting_date timestamp 
);

COPY sodra.jobs(job_id,agency,job_title,salary,location,job_description,qualifications,skills,
posting_date) from 'Jobs.csv' with header = true;

CREATE CUSTOM INDEX user_idx ON sodra.user(job_description) 
	USING 'org.hara.sodra.index.SodraIndex';